{
  "name": "gesture-pilot",
  "version": "1.0.0",
  "description": "",
  "main": "code.js",
  "scripts": {
    "build": "mkdir -p dist && npm run build:main && npm run build:ui && npm run build:html",
    "build:main": "esbuild src/main.ts --bundle --outfile=dist/main.js --platform=browser --target=es2018",
    "build:ui": "esbuild src/ui/ui.ts --bundle --outfile=dist/ui.js --platform=browser --target=es2018 --format=iife",
    "build:html": "node scripts/build-ui-html.js",
    "watch": "concurrently \"npm:watch:main\" \"npm:watch:ui\" \"npm:watch:html\"",
    "watch:main": "esbuild src/main.ts --bundle --outfile=dist/main.js --platform=browser --target=es2018 --watch",
    "watch:ui": "esbuild src/ui/ui.ts --bundle --outfile=dist/ui.js --platform=browser --target=es2018 --watch",
    "watch:html": "node scripts/watch-html.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
